<h1>予約情報の編集</h1>
<%= form_with(model: [@hotel, @reservation], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :check_in, 'チェックイン' %>
    <%= form.date_field :check_in, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :check_out, 'チェックアウト' %>
    <%= form.date_field :check_out, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :number_of_people, '人数' %>
    <%= form.number_field :number_of_people, class: 'form-control' %>
  </div>
  <div class="form-actions">
    <%= form.submit '再予約する', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'キャンセル', hotel_reservations_path(@hotel), class: 'btn btn-secondary' %>
