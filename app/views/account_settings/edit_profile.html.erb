<main class="account-settings-main">
  <%= render 'account_settings/settings_navigation' %>
  <div class="profile-edit">
    <h3>プロフィール</h3>
    <%= form_for(@user, url: update_profile_account_settings_path, html: { method: :patch }) do |f| %>
      <div class="form-group">
        <%= f.label :profile_image, 'アイコン画像' %>
        <% if @user.profile_image.present? %>
          <%= image_tag @user.profile_image.url, class: 'profile-image' %>
        <% else %>
          <%= image_tag 'https://rails-02-sample.herokuapp.com/assets/common/default-avatar-7a6cbfd7993e89f24bfc888f4a035a83c6f1428b8bdc47eed9095f2799a40153.png', class: 'profile-image' %>
        <% end %>
        <%= f.file_field :profile_image %>
      </div>
      <div class="form-group">
        <%= f.label :name, '名前' %>
        <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <%= f.label :bio, '自己紹介' %>
        <%= f.text_area :bio %>
      </div>
      <div class="form-actions">
        <%= f.submit '保存', class: 'btn btn-primary' %>
        <%= link_to 'キャンセル', show_profile_account_settings_path, class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</main>
