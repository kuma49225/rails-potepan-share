<%= render 'shared/search_form' %>
<div class="hotel-show">
  <div class="hotel-show__image">
    <%= image_tag @hotel.image.present? ? @hotel.image.url : 'https://rails-02-sample.herokuapp.com/assets/room/default-image-4e0ac6b8d01335b5b22fe6586af13644ae51dddb6aeabf35b9174e80f13cd09d.png' %>
  </div>
  <div class="hotel-show__details">
    <h2><%= @hotel.name %></h2>
    <p><%= @hotel.description %></p>
    <p><%= @hotel.address %></p>

    <div class="hotel-show__price">
      <p>¥<%= number_to_currency(@hotel.price, unit: "¥", precision: 0) %>~</p>
    </div>
    <%= form_with(url: new_hotel_reservation_path(@hotel), method: :get, local: true) do %>
      <div class="form-group">
        <label for="check_in">チェックイン</label>
        <%= date_field_tag :check_in, nil, class: 'form-control' %>
      </div>
      <div class="form-group">
        <label for="check_out">チェックアウト</label>
        <%= date_field_tag :check_out, nil, class: 'form-control' %>
      </div>
      <div class="form-group">
        <label for="number_of_people">人数</label>
        <%= number_field_tag :number_of_people, nil, class: 'form-control' %>
      </div>
      <div class="form-actions">
        <%= submit_tag '予約する', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
